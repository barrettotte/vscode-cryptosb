{
	"name": "vscode-cryptosb",
	"displayName": "vscode-cryptosb",
	"author": "Barrett Otte",
	"license": "MIT",
	"description": "Display up to 3 cryptocurrency prices in status bar using CryptoCompare API",
	"version": "0.0.1",
	"publisher": "barrettotte",
	"repository": {
		"type": "git",
		"url": "https://github.com/roblourens/vscode-cryptosb"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.refresh",
				"title": "vscode-cryptosb: Manually refresh prices"
			}
		],
		"configuration": {
			"properties": {
				"vscode-cryptosb.fiat": {
					"type": "string",
					"default": "USD",
					"description": "The FIAT currency to display cryptocurrency prices in."
				},
				"vscode-cryptosb.currencies": {
					"type": "array",
					"default": [
						"BTC",
						"ETH",
						"LTC"
					],
					"description": "List of cryptocurrencies to track (up to 3)."
				},
				"vscode-cryptosb.refreshInterval": {
					"type": "number",
					"default": 60000,
					"description": "Refresh rate to update cryptocurrency price."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode none",
		"compile:dev": "tsc -p ./",
		"watch:dev": "tsc -watch -p ./",
		"watch": "webpack --mode none --watch",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile:dev && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/webpack": "^4.4.27",
		"ts-loader": "^6.0.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.34",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.0"
	},
	"dependencies": {
		"tslint": "^5.16.0"
	}
}
