{
	"name": "vscode-cryptosb",
	"displayName": "vscode-cryptosb",
	"description": "Display up to 3 cryptocurrency prices in status bar using CryptoCompare API",
	"version": "0.0.1",
	"publisher": "barrettotte",
	"repository": {
		"type": "git",
		"url": "https://github.com/roblourens/vscode-cryptosb"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.refresh",
				"title": "vscode-cryptosb: Manually refresh prices"
			}
		],
		"configuration": {
			"properties": {
				"vscode-cryptosb.fiat":{
					"type": "string",
					"default": "USD",
					"description": "The FIAT currency to display cryptocurrency prices in."
				},
				"vscode-cryptosb.currencies":{
					"type": "array",
					"default": ["BTC", "ETH", "LTC"],
					"description": "List of cryptocurrencies to track (up to 3)."
				},
				"vscode-cryptosb.refreshInterval":{
					"type": "number",
					"default": 2000,
					"description": "Refresh rate to update cryptocurrency price."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
